{% block styles %}
    <link href="{{ url('homepage') }}vendor/select2/css/select2.min.css" rel="stylesheet">
    <link href="{{ url('homepage') }}css/signUp.css" rel="stylesheet">
{% endblock %}

<!-- SignUp -->
<div class="modal fade" id="signUpModal" tabindex="-1" role="dialog" aria-labelledby="signUpModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content rounded-0">
            <div class="modal-header border-0">
                <h5 class="modal-title text-center" id="signUpModalTitle">Sign Up</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body overflow-auto">

                <div class="alert alert-danger alert-dismissible fade show p-1 d-none rounded-0 text-center" role="alert">
                  <small></small>
                  <button type="button" class="close p-1 pr-2" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>

                <form action="{{ url('homepage') }}sign-up" method="post" role="form" name="signUpForm" id="signUpForm" autocomplete="off">

                    <div class="form-group">
                        <label for="first_name">I am:</label>
                        <div class="form-check">
                            <input type="radio" value="provider" class="form-check-input signUp-type" name="type" id="signUp-type-provider" aria-describedby="type">
                            <label class="form-check-label" for="type">
                                Providing a service
                            </label>
                        </div>
                        <div class="form-check">
                            <input type="radio" value="seeker" class="form-check-input signUp-type" name="type" id="signUp-type-seeker" aria-describedby="type">
                            <label class="form-check-label" for="type">
                                Looking for a service
                            </label>
                        </div>
                    </div><!-- .form-group -->

                    <div class="form-group">
                        <label for="first_name">First Name</label>
                        <input type="text" name="first_name" class="form-control rounded-0" id="signUp-first_name" aria-describedby="first_name" placeholder="" maxlength="255" autocomplete="off">
                    </div><!-- .form-group -->

                    <div class="form-group">
                        <label for="last_name">Last Name</label>
                        <input type="text" name="last_name" class="form-control rounded-0" id="signUp-last_name" aria-describedby="last_name" placeholder="" maxlength="255" autocomplete="off">
                    </div><!-- .form-group -->

                    <div class="form-group">
                        <label for="country">Country</label>
                        <div id="country-select"></div>
                        <div class="invalid-feedback">
                            Invalid Country
                        </div>
                    </div><!-- .form-group -->

                    <div class="form-group">
                        <label for="city">City</label>
                        <div id="city-select"></div>
                        <small class="form-text text-muted">
                            Please select a country before selecting a city
                        </small>
                        <div class="invalid-feedback">
                            Invalid City
                        </div>
                    </div><!-- .form-group -->

                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" name="email" class="form-control rounded-0" id="signUp-email" aria-describedby="email" placeholder="" maxlength="255" autocomplete="off">
                    </div><!-- .form-group -->

                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" name="password" class="form-control rounded-0" id="signUp-password" aria-describedby="password" placeholder="" maxlength="255" autocomplete="new-password">
                    </div><!-- .form-group -->

                    <div class="form-group">
                        <label for="password_confirmation">Password Confirmation</label>
                        <input type="password" name="password_confirmation" class="form-control rounded-0" id="signUp-password_confirmation" aria-describedby="password_confirmation" placeholder="" maxlength="255" autocomplete="off">
                    </div><!-- .form-group -->

                    <!-- reCaptcha here -->

                    <div class="input-group mt-5">
                        <button type="button" class="btn btn-orange btn-md btn-block rounded-0 mt-3" id="btn-signUp-submit">
                            <span id="signUp-text">
                                <i id="signUp-icon" class="fas fa-paper-plane mr-1"></i>
                                <i id="signUp-spinner" class="fas fa-circle-notch fa-spin d-none"></i>
                                Submit
                            </span>
                        </button>
                    </div>
                    <!-- .input-group -->
                </form>
            </div>
        </div>
    </div>
</div>
<!-- /SignUp -->

{% block scripts %}

<script src="{{ url('homepage') }}vendor/select2/js/select2.min.js"></script>
<script src="{{ url('homepage') }}js/components/country-select.js"></script>
<script src="{{ url('homepage') }}js/components/city-select.js"></script>
<script src="{{ url('homepage') }}js/signUp.js"></script>

<script>
    let signUp = new SignUp();
    signUp.countrySelect.getUrl = '{{ url('healthProvider.countrySearch') }}';
    signUp.countrySelect.selector = '#country-select';
    signUp.countrySelect.token = '{{ csrf_token('register') }}';

    signUp.citySelect.getUrl = '{{ url('healthProvider.citySearch') }}';
    signUp.citySelect.selector = '#city-select';
    signUp.citySelect.token = '{{ csrf_token('register') }}';

    signUp.init();
</script>

{% endblock %}
