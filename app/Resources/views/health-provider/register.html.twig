{% extends 'base.html.twig' %}

{% block title %}Health Providers{% endblock %}

{% block styles %}
    <link href="css/index.css" rel="stylesheet">
{% endblock %}

{% block body %}


    <div class="container-fluid pb-5 mb-5" id="index">

        <div class="row">
            <div class="col-md-7 col-sm-12">

                <div class="row header">
                    <div class="col-md-6 col-sm-12">
                        <div class="logo"></div>
                    </div>
                    <div class="col-md-6 col-sm-12 tag-line">
                        Health Without A Border
                    </div><!-- .col-md-6 -->
                </div><!-- .row -->

            </div><!-- .row -->
        </div><!-- .row -->

        <div class="row">
            <div class="col-lg-12">
                <h2>Health providers create your profile</h2>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <form action="{{ url('homepage') }}sign-up" method="post" role="form" name="signUpForm" id="form" autocomplete="off" accept-charset="utf-8" enctype="multipart/form-data">

                    <div class="form-group">
                        <label for="first_name">First Name</label>
                        <input type="text" name="first_name" class="form-control rounded-0" id="first_name" aria-describedby="first_name" placeholder="" maxlength="255" autocomplete="off">
                    </div><!-- .form-group -->

                    <div class="form-group">
                        <label for="last_name">Last Name</label>
                        <input type="text" name="last_name" class="form-control rounded-0" id="last_name" aria-describedby="last_name" placeholder="" maxlength="255" autocomplete="off">
                    </div><!-- .form-group -->

                    <div class="form-group">
                        <label for="country">Country</label>
                        <input type="text" name="country" class="form-control rounded-0" id="country" aria-describedby="country" placeholder="" maxlength="255" autocomplete="off">
                    </div><!-- .form-group -->

                    <div class="form-group">
                        <label for="city">City</label>
                        <input type="text" name="city" class="form-control rounded-0" id="city" aria-describedby="city" placeholder="" maxlength="255" autocomplete="off">
                    </div><!-- .form-group -->

                    <div class="form-group">
                        <label for="profession">Profession</label>
                        <input type="text" name="profession" class="form-control rounded-0" id="profession" aria-describedby="profession" placeholder="" maxlength="255" autocomplete="off">
                    </div><!-- .form-group -->

                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" name="email" class="form-control rounded-0" id="email" aria-describedby="email" placeholder="" maxlength="255" autocomplete="off">
                    </div><!-- .form-group -->

                    <div class="form-group">
                        <button type="button" class="btn btn-primary rounded-0" id="btn-verify-email">Verify your email</button>
                    </div><!-- .form-group -->

                    <div class="form-group">
                        <label for="clinic_files">Photo, You can upload up to 20 photos of your clinic and yourself</label>
                        <input type="file" name="clinic_files" accept="image/x-png,image/gif,image/jpeg">
                    </div><!-- .form-group -->

                    <div class="form-group">
                        <label for="bio">Bio: tell us about yourself, your experience and your personality. Make it catchy</label>
                        <textarea name="bio" rows="8" class="form-control" placeholder="Make your story interesting yet professional"></textarea>
                    </div><!-- .form-group -->

                    <div class="form-group">
                        <label for="certificates_liscenses">Bio: tell us about yourself, your experience and your personality. Make it catchy</label>
                        <input type="file" name="certificates_liscenses" accept="application/msword, application/vnd.ms-excel,application/vnd.ms-powerpoint,text/plain, application/pdf, image/*">
                    </div><!-- .form-group -->

                    <div class="form-group">
                        <label for="">Working hours, address, upload your google map</label>
                    </div><!-- .form-group -->

                    <div class="form-group">
                        <label for="services">What services do you offer</label>
                        Service fee
                    </div><!-- .form-group -->

                    <div class="form-group">
                        <label for="availability">Availability</label>
                        Calendar time
                    </div><!-- .form-group -->

                    <div class="form-group">
                        <label for="availability">Availability</label>
                        Calendar time
                    </div><!-- .form-group -->

                    <div class="form-group">
                        <label for="available_interview">Woiuld you be available for skype/whatsApp interview?</label>
                        <input type="radio" name="available_interview" id="available_interview_" value="0"> No
                        <br />
                        <input type="radio" name="available_interview" value="1"> Yes
                    </div><!-- .form-group -->

                    <!-- reCaptcha here -->

                    <div class="input-group mt-5">
                        <button type="button" class="btn btn-orange btn-md btn-block rounded-0 mt-3" id="btn-signUp-submit">
                            <span id="signUp-text">
                                <i id="signUp-icon" class="fas fa-paper-plane mr-1"></i>
                                <i id="signUp-spinner" class="fas fa-circle-notch fa-spin d-none"></i>
                                Submit
                            </span>
                        </button>
                    </div>
                    <!-- .input-group -->
                </form>
            </div>
            </div>
        </div>

    </div><!-- .container-fluid -->

{% endblock %}

{% block scripts %}
{% endblock %}
